{
  "name": "aoe4-game-analyzer",
  "version": "0.1.0",
  "description": "CLI tool for fetching and inspecting static Age of Empires IV data",
  "bin": {
    "aoe4-analyze": "dist/index.js"
  },
  "scripts": {
    "cli": "ts-node src/index.ts",
    "build": "tsc -p tsconfig.json",
    "test": "jest --runInBand",
    "test:watch": "jest --watch --runInBand"
  },
  "dependencies": {
    "axios": "^1.6.8",
    "chalk": "^5.3.0",
    "commander": "^11.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.1.0",
    "jest": "^29.7.0",
    "nock": "^13.4.0",
    "ts-jest": "^29.2.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=18"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/__tests__"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "testMatch": [
      "**/__tests__/**/*.(test|spec).ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  }
}
